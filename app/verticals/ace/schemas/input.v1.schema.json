{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://aether.engine/schemas/ace-wholesale/input.v1.schema.json",
    "title": "ACE Wholesale Engine Input (v1)",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "contractVersion",
        "verticalId",
        "asOfDate",
        "customerId",
        "shipTo",
        "currency",
        "lines"
    ],
    "properties": {
        "contractVersion": {
            "type": "string",
            "const": "v1"
        },
        "verticalId": {
            "type": "string",
            "const": "ace-wholesale"
        },
        "asOfDate": {
            "type": "string",
            "format": "date"
        },
        "customerId": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
        },
        "shipTo": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "country",
                "postalCode"
            ],
            "properties": {
                "country": {
                    "type": "string",
                    "pattern": "^[A-Z]{2}$"
                },
                "postalCode": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 16
                }
            }
        },
        "currency": {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
        },
        "lines": {
            "type": "array",
            "minItems": 1,
            "maxItems": 200,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "sku",
                    "qty"
                ],
                "properties": {
                    "sku": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 64
                    },
                    "qty": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 1000000
                    }
                }
            }
        }
    }
}