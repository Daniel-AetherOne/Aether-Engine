{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "ruleSetVersion",
        "executionOrder",
        "rules"
    ],
    "additionalProperties": false,
    "properties": {
        "ruleSetVersion": {
            "type": "string",
            "minLength": 1
        },
        "executionOrder": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "rules": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "type"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 1
                    },
                    "type": {
                        "type": "string",
                        "minLength": 1
                    },
                    "title": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    },
                    "params": {
                        "type": "object"
                    }
                }
            }
        }
    }
}