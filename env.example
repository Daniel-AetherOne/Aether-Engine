# LevelAI SaaS Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/levelai_db

# Redis Configuration (for Celery tasks)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ENV=development

# Application Settings
APP_NAME=LevelAI SaaS
APP_VERSION=0.1.0
DEBUG=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Storage Configuration
STORAGE_BACKEND=local  # Options: local, s3
LOCAL_STORAGE_PATH=data

# S3 Configuration (only needed when STORAGE_BACKEND=s3)
S3_BUCKET=your-s3-bucket-name
S3_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=data/uploads
OFFERS_DIR=data/offers

# External Services (placeholders for future integration)
WHATSAPP_API_KEY=your-whatsapp-api-key
CRM_API_URL=your-crm-api-url
CRM_API_KEY=your-crm-api-key

# HubSpot CRM Integration
HUBSPOT_ENABLED=false
HUBSPOT_TOKEN=your-hubspot-api-token
PIPELINE=default
STAGE=appointmentscheduled

# AI/ML Services (placeholders)
VISION_API_URL=your-vision-api-url
VISION_API_KEY=your-vision-api-key
PRICING_MODEL_URL=your-pricing-model-url




